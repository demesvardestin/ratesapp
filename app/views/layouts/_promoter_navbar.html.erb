<style type="text/css">
    .navbar-toggler .fas:not(.active) {
        display: none;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light fixed-top">
    <div class="container">
        <a class="navbar-brand color-blue" href="/">
            myrates
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse"
            data-target="#mobileNavbarCollapse" aria-controls="mobileNavbarCollapse"
            aria-expanded="false" aria-label="Toggle navigation"
            style="padding: 0; border: 0; box-shadow: none; outline: none;"
            onclick="$('#mobileNavbarCollapse').toggleClass('mobile-hide');
                    $('.navbar-toggler .fas').toggleClass('active');">
            <i class="fas fa-bars active" style="font-size: 26px;"></i>
            <i class="fas fa-times" style="font-size: 26px;"></i>
        </button>
        
        <div class="collapse navbar-collapse justify-content-end mobile-hide" id="mobileNavbarCollapse">
            <ul class="navbar-nav" style="border-top: 3px solid #e7e7e9;">
                <li class="nav-item" style="margin: 0;">
                    <a class="dropdown-item" href="/account/rates" style="padding: 15px 0;">
                        <i class="fas fa-angle-right"></i> My Rates
                    </a>
                </li>
                <div class="dropdown-divider"></div>
                <li class="nav-item" style="margin: 0;">
                    <a class="dropdown-item" href="/promo/requests" style="padding: 15px 0;">
                        <i class="fas fa-angle-right"></i> Requests
                    </a>
                </li>
                <div class="dropdown-divider"></div>
                <li class="nav-item" style="margin: 0;">
                    <a class="dropdown-item" href="/account/analytics"
                        style="padding: 15px 0;">
                        <i class="fas fa-angle-right"></i> Analytics
                    </a>
                </li>
                <div class="dropdown-divider"></div>
                <li class="nav-item" style="margin: 0;">
                    <a class="dropdown-item" href="/account/settings"
                        style="padding: 15px 0;">
                        <i class="fas fa-angle-right"></i> Account Settings
                    </a>
                </li>
                <div class="dropdown-divider"></div>
                <li class="nav-item" style="margin: 0;">
                    <a class="dropdown-item cursor-pointer"
                        onclick="window.location.href='/account/payouts'"
                        style="padding: 15px 0;" href="#">
                        <i class="fas fa-angle-right"></i> Payout Settings
                    </a>
                </li>
                <div class="dropdown-divider"></div>
                <li class="nav-item" style="margin: 0;">
                    <a class="dropdown-item" href="/password/settings"
                        style="padding: 15px 0;">
                        <i class="fas fa-angle-right"></i> Password Settings
                    </a>
                </li>
                <div class="dropdown-divider"></div>
                <li class="nav-item" style="margin: 0;">
                    <%= link_to destroy_user_session_path,
                        class:"dropdown-item", method: :delete,
                        style:"border-bottom-left-radius: 2px; border-bottom-right-radius: 2px;
                            padding: 15px 0; color: initial !important;" do %>
                        <i class="fas fa-angle-right"></i> Logout
                    <% end %>
                </li>
            </ul>
        </div>
    
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item notification-nav-item">
                    <span class="notification" onclick="showNotificationBox()">
                        <i class="far fa-bell" class="notification-bell"
                            style="font-size: 20px; color: #a1a1a3;"></i>
                        <% if request_count > 0 %>
                            <span class="notif-digit badge badge-info">
                                <%= request_count > 9 ? '9+' : request_count %>
                            </span>
                        <% end %>
                    </span>
                    
                    <div id="notification-box" class="hide card" style="max-height: 402px;">
                        <div class="card-header"
                            style="background-color: #00adf2; color: #fff; border-bottom: none;">
                            Notifications
                            <span style="float: right; cursor: pointer; font-size: 15px;"
                                onclick="showNotificationBox()">
                                &times;
                            </span>
                        </div>
                        <div class="card-body" style="padding: 0; max-height: 100%; overflow-y: auto;">
                            <% if requests.unseen.present? %>
                                <% requests.unseen.each do |req| %>
                                    <div class="notification-item">
                                        <p style="font-size: 14px; margin-bottom: 0;">
                                            New request from <%= req.client_email.truncate(11) %>
                                            <span style="">
                                                <%= link_to promo_request_path(:id => req.token), class:"btn btn-link", style: "padding: 0;" do %>
                                                    <i class="fas fa-search"></i>
                                                <% end %>
                                            </span>
                                        </p>
                                    </div>
                                <% end %>
                            <% else %>
                                <div id="notification-box-placeholder">
                                    <p>No new requests</p>
                                </div>
                            <% end %>
                        </div>
                        <div class="card-footer" style="padding: 0;">
                            <button class="btn btn-link btn-block"
                                style="padding-top: 15px; padding-bottom: 15px;
                                        text-decoration: none;"
                                onclick="clearNotifications()">
                                clear notifications
                            </button>
                        </div>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/account/rates">
                        Add Rates
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/promo/requests">
                        Requests
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/account/analytics">
                        Analytics
                    </a>
                </li>
                <li class="nav-item">
                    <div class="dropdown">
                        <a class="btn btn-primary btn-lg" id="dropdownMenuButton"
                            style="font-size: 15px; color: #fff; border-radius: 4px; cursor: pointer;"
                            data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false" style="padding-right: 0;">
                            <%= current_user.username %> <i class="fas fa-angle-down"></i>
                        </a>
                        <div class="dropdown-menu box-shadow dropdown-menu-right"
                            aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="/account/settings">
                                Account
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item cursor-pointer" href="#"
                                onclick="window.location.href='/account/payouts'">
                                Payouts
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/password/settings">
                                Password
                            </a>
                            <div class="dropdown-divider"></div>
                            <%= link_to "Logout", destroy_user_session_path,
                                class:"dropdown-item", method: :delete,
                                style:"border-bottom-left-radius: 2px; border-bottom-right-radius: 2px;" %>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script type="text/javascript">
    function showNotificationBox() {
        $('#notification-box').toggleClass('hide');
        $('.notif-digit').hide();
        
        $.get('/update_notification_watcher');
    }
    
    function clearNotifications() {
        $.get('/notifications/update_all_notifications').done((e) => {
            $('#notification-box > .card-body').html(`
                <div id="notification-box-placeholder">
                    <p>No new notifications</p>
                </div>
            `);
        });
    }
</script>