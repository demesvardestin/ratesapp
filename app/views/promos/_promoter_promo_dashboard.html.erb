<div class="modal fade" id="newPromoPackageModal" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content box-shadow" style="margin-top: -45px;">
      <div class="modal-header" style="border-bottom: none;">
        <h5 class="modal-title text-center" id="exampleModalLabel">
            Add new rate
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'promos/form', promo: @promo %>
      </div>
    </div>
  </div>
</div>
    
<% if @promos.present? %>
    <div id="promoter-packages" align="center">
        <%= render 'promos/promos' %><br />
    </div>
    
    <button class="btn btn-primary"
        data-toggle="modal" data-target="#newPromoPackageModal">
        Add another rate
    </button>
<% else %>
    <section class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card" style="margin-top: 30px;">
                <div class="card-body" style="vertical-align: middle !important;">
                    <div>
                        <h5>You haven't added any rates yet</h5>
                        
                        <button class="btn btn-primary" style="margin-top: 20px;"
                            data-toggle="modal" data-target="#newPromoPackageModal">
                            Add your first rate
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
<% end %>