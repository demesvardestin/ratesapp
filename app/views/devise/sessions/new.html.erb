<style type="text/css">
    nav {
        display: none !important;
    }
    
    body {
        padding-top: 0 !important;
    }
    
    #base-body {
      height: calc(100vh - 65px);
    }
    
    .form-control {
      outline: none !important;
      box-shadow: none !important;
    }
</style>

<section id="register" class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= render "shared/header" %>
      
      <div class="card mr-card">
        <div class="card-header"
          style="background-color: #00adf2; color: #fff; border-bottom: none;">
          <h6 style="margin-bottom: 0;">Log In</h6>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <% flash.each do |name, msg| %>
              <% if msg.is_a?(String) && !msg.downcase.include?("signed out successfully") %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              <% end %>
            <% end %>
            
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
            </div>
          
            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "password", class:"form-control", placeholder:"Password" %>
            </div>
          
            <div class="actions">
              <%= f.submit "Log In", class:"btn btn-primary btn-block", data: { :disable_with => "Logging you in..." } %>
            </div>
          <% end %>
        </div>
      </div>
      
      <div align="center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>

