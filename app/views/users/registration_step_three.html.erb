<style type="text/css">
    #alert-notice, nav, #side-panel {
        display: none !important;
    }
    
    body {
        padding-top: 0 !important;
    }
    
    #promoter-body {
        width: 100% !important;
    }
    
    #form-container {
        margin-top: 60px;
    }
    
    #promoter-body > div.container {
        padding-top: 0 !important;
    }
</style>

<section id="registration-flow">
    <section id="registration-step-three">
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar bg-primary progress-bar-striped
                                                progress-bar-animated" role="progressbar" style="width: 75%;"
                                                aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row" style="margin-top: 30px;">
                                    <div class="col-md-12">
                                        <h3 class="text-center">How will users pay you?</h3>
                                        
                                        <div id="form-container">
                                            <%= form_for(@promoter, :url => { :action => "patch_registration_step_three" }) do |f| %>
                                                <div class="field">
                                                    <%= f.label :cashapp_username %>
                                                    <div class="input-group mb-3" style="font-size: 15px !important;">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" id="basic-addon3"
                                                                style="background-color: #fff !important; border: 1px solid #e7e7e9 !important;
                                                                    color: #a1a1a3;">
                                                                cash.me/
                                                            </span>
                                                        </div>
                                                        <%= f.text_field :cashapp_link, class:"form-control", placeholder:"username",
                                                            style:"border-top-left-radius: 0 !important; border-bottom-left-radius: 0 !important;" %>
                                                    </div>
                                                </div>
                                                
                                                <div class="field">
                                                    <%= f.label :paypal_username %>
                                                    <div class="input-group mb-3" style="font-size: 15px !important;">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text" id="basic-addon3"
                                                                style="background-color: #fff !important; border: 1px solid #e7e7e9 !important;
                                                                    color: #a1a1a3;">
                                                                paypal.me/
                                                            </span>
                                                        </div>
                                                        <%= f.text_field :paypal_link, class:"form-control", placeholder:"username",
                                                            style:"border-top-left-radius: 0 !important; border-bottom-left-radius: 0 !important;" %>
                                                    </div>
                                                </div>
                                                
                                                <div class="row" style="margin-top: 60px;">
                                                    <div class="col-md-3 offset-md-9">
                                                        <div class="actions" align="right">
                                                            <input type="submit" class="btn btn-primary btn-block"
                                                                value="Next">
                                                        </div>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>