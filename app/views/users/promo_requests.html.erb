<div class="row">
    <div class="col-md-2 offset-md-1" style="margin-bottom: 15px;">
        <div class="dropdown">
            <button class="btn btn-info btn-block box-shadow" id="dropdownMenuButton"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filter <i class="fas fa-filter"></i>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton"
                style="padding: 0; font-size: 15px !important;">
                <a class="dropdown-item" onclick="$.get('/requests/fetch_unprocessed_requests');"
                    style="cursor: pointer;">
                    Unprocessed Requests
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" onclick="$.get('/requests/fetch_processed_requests');"
                    style="cursor: pointer;">
                    Processed Requests
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" onclick="$.get('/requests/fetch_all_requests');"
                    style="cursor: pointer;">
                    All Requests
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header text-center" id="requests-card-header"
                style="background-color: #00adf2; color: #fff; border-bottom: none;">
                <h6 style="margin-bottom: 0;">All Requests</h6>
            </div>
            <div class="card-body" style="padding-top: 30px; padding-bottom: 30px;"
                id="all-requests">
                <% if @requests.present? %>
                    <%= render partial: "promo_requests/requests", locals: { requests: @requests } %>
                    <div style="margin-top: 10px;">
                        <%= will_paginate @requests, :page_links => false %>
                    </div>
                <% else %>
                    <p align="center">You haven't received any request yet</p>
                <% end %>
            </div>
        </div>
    </div>
</div>