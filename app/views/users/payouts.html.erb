<style type="text/css">
    .card-toggle-btn a:not(.active) {
        color: #007bff !important;
        box-shadow: none;
    }
    
    .tab-content-container .nav-box:not(.active) {
        display: none;
    }
    
    @media only screen and (min-device-width: 767px) and (max-device-width: 1024px) {
        .nav-box, .payout-preference-box {
            padding: 0 !important;
            border: none !important;
        }
    }
</style>

<section id="payouts">
    <div class="row" align="center">
        <%= render 'layouts/subnav' %>
        
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body" align="center"
                    style="border-bottom: none; padding: 20px; font-size: 15px !important;">
                    <ul class="nav nav-pills nav-fill card-toggle-btn">
                      <li class="nav-item">
                        <a class="nav-link active cursor-pointer">Links</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link cursor-pointer">Debit</a>
                      </li>
                    </ul>
                    
                    <div class="tab-content-container" style="margin-top: 15px;">
                        <div class="nav-box active">
                            <%= form_for(@promoter, :html => { :multipart => true, :id => "user-form" }) do |f| %>
                                <% if @promoter.errors.any? %>
                                    <div id="error_explanation" class="alert alert-warning" role="alert">
                                        <h2>The following <%= pluralize(@promoter.errors.count, "error") %> occurred:</h2>
                                
                                        <ul>
                                            <% @promoter.errors.full_messages.each do |message| %>
                                                <li><%= message %></li>
                                            <% end %>
                                        </ul>
                                    </div>
                                <% end %>
                                
                                <div class="field">
                                    <%= f.label :cashapp_link %>
                                    <div class="input-group mb-3" style="font-size: 15px !important;">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon3"
                                                style="background-color: #fff !important; border: 1px solid #e7e7e9 !important;
                                                    color: #a1a1a3;">
                                                cash.me/
                                            </span>
                                        </div>
                                        <%= f.text_field :cashapp_link, class:"form-control", placeholder:"Cashapp username",
                                            style:"border-top-left-radius: 0 !important; border-bottom-left-radius: 0 !important;" %>
                                    </div>
                                </div>
                                
                                <div class="field">
                                    <%= f.label :paypal_link %>
                                    <div class="input-group mb-3" style="font-size: 15px !important;">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon3"
                                                style="background-color: #fff !important; border: 1px solid #e7e7e9 !important;
                                                    color: #a1a1a3;">
                                                paypal.me/
                                            </span>
                                        </div>
                                        <%= f.text_field :paypal_link, class:"form-control", placeholder:"Paypal username",
                                            style:"border-top-left-radius: 0 !important; border-bottom-left-radius: 0 !important;" %>
                                    </div>
                                </div>
                                
                                <div class="action">
                                    <%= f.submit "Update Payout Links", class:"btn btn-primary btn-block box-shadow",
                                        data: { :disable_with => "Updating..." } %>
                                </div>
                            <% end %>
                        </div>
                        
                        <div class="nav-box">
                            <h5>Coming soon!</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $('.card-toggle-btn .nav-link').on('click', e => {
        $('.card-toggle-btn .nav-link').toggleClass('active');
        $('.tab-content-container div').toggleClass('active');
    });
    
    displayBar = (elem) => {
        elem.lastElementChild.classList.toggle('full-width');
    }
</script>